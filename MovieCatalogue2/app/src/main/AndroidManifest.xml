<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviecatalogue2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/clapperboard"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/clapperboard"
        android:supportsRtl="true">
        <activity android:name=".TvshowDetailActivity" android:theme="@style/AppTheme.TransparentTheme.Main"></activity>
        <activity
            android:name=".MoviesDetailActivity"
            android:theme="@style/AppTheme.TransparentTheme" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.TransparentTheme.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>